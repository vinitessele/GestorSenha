unit UInicial;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes,
  System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  FMX.Controls.Presentation, FMX.StdCtrls, FMX.Objects, FMX.Layouts,
  FMX.TabControl, System.Actions, FMX.ActnList;

type
  TFrmInicial = class(TForm)
    layout_rodape: TLayout;
    imgProximo: TImage;
    Label3: TLabel;
    TabControl1: TTabControl;
    TabItem1: TTabItem;
    TabItem2: TTabItem;
    TabItem3: TTabItem;
    TabItem4: TTabItem;
    TabItem5: TTabItem;
    TabItem6: TTabItem;
    Image1: TImage;
    Label1: TLabel;
    Label2: TLabel;
    ActionList1: TActionList;
    ActTab2: TChangeTabAction;
    ActTab3: TChangeTabAction;
    ActTab4: TChangeTabAction;
    ActTab5: TChangeTabAction;
    ActTab6: TChangeTabAction;
    procedure Label3Click(Sender: TObject);
    procedure imgProximoClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrmInicial: TFrmInicial;

implementation

{$R *.fmx}

procedure TFrmInicial.imgProximoClick(Sender: TObject);
begin
  case TabControl1.TabIndex of
    0:
      ActTab2.Execute;
    1:
      ActTab3.Execute;
    2:
      begin
        //line.Visible := false;
        layout_rodape.Visible := false;
        ActTab4.Execute;
      end;
  end;
end;

procedure TFrmInicial.Label3Click(Sender: TObject);
begin
  ActTab5.Execute;
end;

end.
